<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lbcmmszdntnt.domain.core.model.mapper.quadrant.ThirdQuadrantMapper">

    <resultMap extends="BaseResultMap" id="AllInfoResultMap" type="cn.lbcmmszdntnt.domain.core.model.vo.ThirdQuadrantVO">
        <collection property="actions" ofType="cn.lbcmmszdntnt.domain.core.model.entity.inner.Action"
                    resultMap="cn.lbcmmszdntnt.domain.core.model.mapper.inner.ActionMapper.BaseResultMap" columnPrefix="a_" />
    </resultMap>
    <select id="searchThirdQuadrant" resultMap="AllInfoResultMap">
        select
            t.*,
            a.id a_id, a.third_quadrant_id a_third_quadrant_id, a.content a_content, a.is_completed a_is_completed
        from
            third_quadrant t left join action a on t.id = a.third_quadrant_id and a.is_deleted = 0
        where
            t.core_id = #{coreId,jdbcType=BIGINT} and t.is_deleted = 0
        order by a.is_completed, a.create_time
    </select>

</mapper>
